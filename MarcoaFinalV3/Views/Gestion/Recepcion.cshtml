
@{
    ViewBag.Title = "Recepcion";
    Layout = "~/Views/Shared/_Layout_Vendedor.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-4 col-form-label">Seleccionar Capacidad Mesa</label>
            <div class="col-sm-4">
                <select class="form-control" id="cbocapacidad"></select>
            </div>
        </div>
        <hr />
        <div id="mesas" class="row">
            
            



        </div>
    </div>
</div>


@section scripts{

    <script>
        var tabladata;

        $(document).ready(function () {

            jQuery.ajax({
                url: '@Url.Action("ListarCapacidad", "Gestion")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("<option>").attr({ "value": "0"}).text("Todos").appendTo("#cbocapacidad");

                    $.each(data.data, function (index, value) {
                        $("<option>").attr({ "value": value.IdCapacidadMesa }).text(value.Descripcion).appendTo("#cbocapacidad");
                    });
                    $("#cbocapacidad").val($("#cbocapacidad option:first").val());
                    $("#cbocapacidad").trigger("change");
                },
                error: function (error) {
                    console.log(error)
                }
            });


        });

        $("#cbocapacidad").on("change", function (e) {

            jQuery.ajax({
                url: '@Url.Action("ListarMesa", "Gestion")' + '?idcapacidad=' + $("#cbocapacidad option:selected").val() ,
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $("#mesas").html("");
                    $.each(data.data, function (index, value) {
                        var clase = "";
                        var icono = "";
                        switch (value.oEstadoMesa.Descripcion) {
                            case 'Disponible':
                                clase = "success";
                                icono = "fas fa-check-circle";
                                break;
                            case 'Ocupado':
                                clase = "danger";
                                icono = "far fa-times-circle";
                                break;
                            default:
                                clase = "info";
                                icono = "fas fa-air-freshener";
                        }

                        $("<div>").addClass("col-xl-3 col-md-6 mb-4").append(
                            $("<div>").addClass("card border-" + clase + " rounded-0").append(
                                $("<div>").addClass("card-body").append(
                                    $("<div>").addClass("row no-gutters align-items-center").append(
                                        $("<div>").addClass("col mr-2").append(
                                            $("<div>").addClass("h5 mb-0 font-weight-bold text-gray-800").text("MESA N°: " + value.Numero),
                                            $("<div>").addClass("text-xs font-weight-bold text-" + clase + " text-uppercase mb-1 mt-1").text("Capacidad: " + value.oCapacidadMesa.Descripcion),
                                        ),
                                        $("<div>").addClass("col-auto").append(
                                            $("<i>").addClass(icono + " fa-2x text-" + clase)
                                        )
                                    )
                                ),
                                $("<div>").addClass("card-footer d-flex bg-" + clase + " align-items-center justify-content-between rounded-0").append(
                                    $("<a>").addClass("small text-white stretched-link text-uppercase font-weight-bold select-mesa").text(value.oEstadoMesa.Descripcion).data("info", JSON.stringify({ idmesa: value.IdMesa , idestadomesa: value.oEstadoMesa.IdEstadoMesa})),
                                    $("<div>").addClass("small text-white").append($("<i>").addClass("fas fa-angle-right"))
                                )
                            )
                        ).appendTo("#mesas");
                    });

                },
                error: function (error) {
                    console.log(error)
                }
            });

        })


        $(document).on('click', '.select-mesa', function (event) {
            var json = JSON.parse( $(this).data("info"))
            if (json.idestadomesa == 1) {
                window.location.href = "@Url.Action("RecepcionRegistro", "Gestion")" + "?idmesa=" + json.idmesa
            } else if (json.idestadomesa== 2) {
                window.location.href = "@Url.Action("DetalleRecepcion", "Gestion")" + "?idmesa=" + json.idmesa
            } else if (json.idestadomesa == 3) {

                swal({
                  title: "Terminar Limpieza",
                  text: "A continuación el estado de la mesa será DISPONIBLE",
                  icon: "warning",
                  buttons: ["Cancelar", "Aceptar"]
                })
                .then((resultado) => {
                    if (resultado) {
                        jQuery.ajax({
                            url: '@Url.Action("ActualizarEstadoMesa", "Gestion")' + "?idmesa=" + json.idmesa + "&idestadomesa=1",
                            type: "GET",
                            data: null,
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                            success: function (data) {
                                $("#cbocapacidad").trigger("change");
                            },
                            error: function (error) {
                                console.log(error)
                            }
                        });
                    }
                });

            }
            console.log(json);

        });




    </script>

}
